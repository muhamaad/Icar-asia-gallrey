<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Footer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/footer_grid_view_background"
    android:orientation="horizontal"
    android:padding="5dp"
    android:visibility="gone">

    <Button
        android:id="@+id/Footer_delete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="DELETE"
        android:textColor="#0C70FF" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background=""/>

    <Button
        android:id="@+id/Footer_make_as_main_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="MAKE AS MAIN"
        android:textColor="#0C70FF" />

    <Button
        android:id="@+id/Footer_edit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="EDIT"
        android:textColor="#0C70FF" />

</LinearLayout>